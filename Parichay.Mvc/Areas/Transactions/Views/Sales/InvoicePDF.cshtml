                            <th class="text-right">PRICE</th>
                            <th class="text-right">AMOUNT</th>
                        </tr>
                    </thead>
                    <tbody>


                        @foreach (var item in @Model.SALESITEMS)
                        {
                            <tr>
                                <td class="no">@item.ITEMNO</td>
                                <td class="text-left" style="width: 100%;">
