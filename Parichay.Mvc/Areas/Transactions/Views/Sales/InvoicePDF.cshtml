            <table style="float: right; margin: 10px;">
                <tfoot>
                    <tr>
                        <td colspan="2"></td>
                        <td colspan="3">SUBTOTAL</td>
                        <td>₹ @Model.SALESAMOUNT.ToString("0.##")</td>
                    </tr>
                    @if (Model.TAXSLAB == "IGST")
