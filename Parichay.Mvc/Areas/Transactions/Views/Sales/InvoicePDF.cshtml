@model Parichay.Bussiness.Model.ReportPDF
  
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.ReportNameTitle</title>

    <style>

        .invoice {
            margin-top: 30px;
        }

            .invoice table {
                /* border-collapse: collapse; */
                /* border-spacing: 0; */
                margin-left: 10px;
            }

                .invoice table td,
                .invoice table th {
                    padding: 10px;
                    background: rgba(238, 238, 238, 0.6);
                    border-bottom: 2px solid #fff;
                    color: #03535e;
                }

                .invoice table th {
                    white-space: nowrap;
                    font-weight: 600;
                    font-size: 15px
                }

                .invoice table td h3 {
                    margin: 0;
                    font-weight: 400;
                    color: #03535e;
                    font-size: 1.5em
                }

                .invoice table .qty,
                .invoice table .total,
                .invoice table .unit {
                    text-align: right;
                    font-size: 1.2em
                }

                .invoice table .no {
                    color: #fff;
                    font-size: 1.0em;
                    background: #03535e;
                }

                .invoice table .unit {
                    background: #ddd
                }

                .invoice table .total {
                    background: #03535e;
                    color: #fff
                }

                .invoice table .text-left {
                    text-align: left;
                }

                .invoice table tbody tr:last-child td {
                    border: none
                }

        .billing {
            margin-top: 82%;
        }

            .billing table tfoot td {
                background: 0 0;
                border-bottom: none;
                white-space: nowrap;
                text-align: right;
                padding: 10px 20px;
                font-size: 1.2em;
                border-top: 1px solid #aaa
            }

            .billing table tfoot tr:first-child td {
                border-top: none
            }

            .billing table tfoot tr:last-child td {
                color: #03535e;
                font-size: 1.4em;
                border-top: 1px solid #3989c6;
                font-weight: 600;
            }

            .billing table tfoot tr td:first-child {
                border: none
            }

        .invoice table tr td {
            font-size: 15px;
        }
    </style>

    <style>

            @@page {
                size: auto;
                margin: 0mm;
            }

            html {
                margin: 0px;
                /* this affects the margin on the html before sending to printer */
            }

            body {
                font-family: Arial;
                font-size: 12px;
            }

            .header {
                z-index: 1;
                position: relative;
            }

                .header .skew:before {
                    content: '';
                    position: absolute;
                    left: 0;
                    bottom: 0;
                    overflow: visible;
                    width: 100%;
                    height: 250px;
                    background: #03535e;
                    z-index: -1;
                    -webkit-transform: skewY(-3deg);
                    -moz-transform: skewY(-3deg);
                    -ms-transform: skewY(-3deg);
                    -o-transform: skewY(-3deg);
                    transform: skewY(-3deg);
                    -webkit-backface-visibility: hidden;
                    backface-visibility: initial;
                }

                .header .skew .header-inner {
                    padding: 97px;
                    margin-left: auto;
                    margin-right: auto;
                    color: white;
                }

            .logo {
                margin-top: 12px;
            }

                .logo img {
                    height: auto;
                    width: 100px;
                }

            .Customer {
                float: left;
                margin-top: -75px;
                margin-left: -60px;
            }

            tfoot tr td {
                color: #03535e;
            }


            page[size="A4"] {
                background: white;
                display: block;
            }

            /*@@media print {
          page[size="A4"] {
            margin: 0;
            box-shadow: 0;
          }
        }*/


            #background {
                position: absolute;
                z-index: 0;
            }

            #content {
                position: absolute;
                z-index: 1;
            }

            #bg-text {
                background: url(/assets/PDF/watermark.jpg);
                background-repeat: no-repeat;
                height: 473px;
                width: 539px;
                margin-top: 14%;
                opacity: 0.1;
                margin-left: 250px;
            }

            .page-wrapper {
                width: 99%;
                margin-top: 10px;
                display: inline-block;
            }

            .table-header {
                padding: 2px;
            }

            .table-pagenumber {
                float: right;
                margin-right: 2px;
                color: #03535e;
            }



            .footer {
                /* position: fixed; */
                left: 0;
                bottom: 0;
                width: 100%;
                background-color: #03535e;
                color: white;
                text-align: center;
                height: 15%;
                margin-top: 1%;
            }

                 .footerIGST {
                /* position: fixed; */
                left: 0;
                bottom: 0;
                width: 100%;
                background-color: #03535e;
                color: white;
                text-align: center;
                height: 15%;
                margin-top: 5%;
            }

        .table-header p {
            margin: 0;
        }
    </style>
</head>

