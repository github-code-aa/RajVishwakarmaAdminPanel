                        <tr>
                            <td colspan="2"></td>
                            <td colspan="3">CGST 9%</td>
                            <td>₹ @Model.CGST.ToString("0.##")</td>
                        </tr>
                        <tr>
                            <td colspan="2"></td>
                            <td colspan="3">SGST 9%</td>
                            <td>₹ @Model.SGST.ToString("0.##")</td>
                        </tr>
                    }
                    <tr>
                        <td colspan="2"></td>
                        <td colspan="3">DISCOUNT</td>
                        <td>₹ @Model.DISCOUNT.ToString("0.##")</td>
                    </tr>
                    <tr>
                        <td colspan="2"></td>
                        <td colspan="3">GRAND TOTAL</td>
                        <td>₹ @Model.SALESAMOUNTGST.ToString("0.##")</td>
                    </tr>
