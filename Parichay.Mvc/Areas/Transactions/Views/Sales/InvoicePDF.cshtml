                        <table style="width: 366px; height: 48px; margin-left: -3px;">
                            <tbody>
                                <tr>
                                    <td style="width: 70px; font-weight: 600; font-size: 13px;">&nbsp;DATE</td>
                                    <td style="width: 120px; font-weight: 600; font-size: 13px; ">INVOICE NO.</td>
                                </tr>
                                <tr>
                                    <td style="width: 70px; ">@Model.SALESDATE</td>
                                    <td style="width: 120px; ">@Model.SALESID</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div style="float:right;" class="logo">
                        <img src="~/assets/PDF/logo.jpg" />

                    </div>

                </div>
            </div>
        </header>

