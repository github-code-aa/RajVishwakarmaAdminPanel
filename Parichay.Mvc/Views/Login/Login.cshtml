@using System.Web.Optimization
@model Parichay.Bussiness.Model.UserMst
@using Parichay.Common
@{
    ViewBag.Title = "LOGIN";

    Layout = null;
}
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta http-equiv="Content-Language" content="en">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, shrink-to-fit=no" />
    <meta name="description" content="Login to Admin Dashboard">
    <!-- Disable tap highlight on IE -->
    <meta name="msapplication-tap-highlight" content="no">
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Content/SweetAlert/sweetalert.js"></script>
    <link rel="stylesheet" href="~/Content/SweetAlert/sweetalert.css">
    <link href="~/assets/css/main.87c0748b313a1dda75f5.css" rel="stylesheet">
    <link href="~/Content/Toastr/toastr.css" rel="stylesheet">
    <link href="~/Content/Toastr/toastr.min.css" rel="stylesheet">
    <script src="~/Content/Toastr/toastr.js"></script>
    <script src="~/Content/Toastr/toastr.min.js"></script>
    <style>
        sup {
            top: -.5em;
            color: red;
        }
    </style>
</head>
<body>
    <div class="app-container app-theme-white body-tabs-shadow">
        <div class="app-container">
            <div class="h-100">
                <div class="h-100 no-gutters row">
                    <div class="d-none d-lg-block col-lg-4">
                        <div class="slider-light">
                            <div class="slick-slider">
                                <div>
                                    <div class="position-relative h-100 d-flex justify-content-center align-items-center bg-plum-plate" tabindex="-1">
                                        <div class="slide-img-bg" style="background-image: url('../../assets/images/originals/city.jpg');"></div>
                                        <div class="slider-content">
                                            <h3>Solution Fashion</h3>
                                            <p>Lorem Ipsum dolor sit Amet.</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="h-100 d-flex bg-white justify-content-center align-items-center col-md-12 col-lg-8">
                        <div class="mx-auto app-login-box col-sm-12 col-md-10 col-lg-9">
                            <div class="app-logo"></div>
                            <h4 class="mb-0">
                                <span>Please sign in to your account.</span>
                            </h4>
                            <div class="divider row"></div>
                            <div>
                                @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { Id = "frmlogin",autocomplete="off" }))
                                {
                                    <div class="form-row">
                                        <div class="col-md-6">
                                            <div class="position-relative form-group">
                                                @Html.LabelSuperScriptFor(x => x.LoginID, "USERNAME", "*", new { @class = "" })
                                                @Html.TextBoxFor(x => x.LoginID, new { @class = "form-control", placeholder = "Enter Username" })
                                                @Html.ValidationMessageFor(x => x.LoginID, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="position-relative form-group">
                                                @Html.LabelSuperScriptFor(x => x.Password, "PASSWORD", "*", new { @class = "" })
                                                @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "Enter Password" })
                                                @Html.ValidationMessageFor(x => x.Password, null, new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="divider row"></div>
                                    <div class="d-flex align-items-center">
                                        <div class="ml-auto">
                                            <button class="btn btn-primary btn-lg" id="btnLogin">Login to Dashboard</button>

                                            @Html.Hidden("RedirectTo", Url.Action("Index", "Login"))
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <button class="btn btn-primary btn-lg block-page-btn-example-3 d-none" id="">Modal</button>
        <button class="btn btn-primary btn-lg block-page-btn-example-3-unblock d-none" id="">ModalHide</button>
        

        <div class="body-block-example-3 d-none" id="LoaderM">
            <div class="loader">
                <div class="line-scale-pulse-out">
                    <div class="bg-warning"></div>
                    <div class="bg-warning"></div>
                    <div class="bg-warning"></div>
                    <div class="bg-warning"></div>
                    <div class="bg-warning"></div>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript" src="../../assets/scripts/main.87c0748b313a1dda75f5.js"></script>
    @Scripts.Render("~/bundles/UserJs/JqueyValidate")
    <script src="~/Commonjs/Login/Login.js"></script>
</body>
</html>
